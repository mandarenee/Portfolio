<h1 class="center-block">Manda Kom</h1>

<button type="button" class="btn btn-primary btn-xs active">
<%= link_to 'New Article', new_article_path %>
</button>

<table class="table-hover">
  <thead>
    <tr class="active">
      <th>Articles</th>
    </tr>
  </thead>

  <tbody>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
       <!--  <td><%= article.body %></td> -->
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

