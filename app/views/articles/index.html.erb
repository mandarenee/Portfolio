<h1>Awesome Articles</h1>

<table>
  <thead>
    <tr>
      <th>Manda's Articles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
          Sidebar here
        </div>
        <div id="content" class="col-xs-9">
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.body %></td>
              <td><%= link_to 'Show', article %></td>
              <td><%= link_to 'Edit Article', edit_article_path(article) %></td>
              <td><%= link_to 'Delete Article', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </div>
      </div>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
